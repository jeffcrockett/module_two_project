<div class="jumbotron">
  <div class='col-md-6'>
    <h3>Login</h3>
    <% if flash.notice %>
    <%= flash.notice %>
    <% end %>
  <%= form_tag '/login', class: 'form-group' do %>

  <%= text_field_tag :username, '', class:'form-control', placeholder:'Username' %><br>

  <%= password_field_tag :password, '', class:'form-control', placeholder:'Password'%><br>

  <%= submit_tag 'Login', class:'form-control' %>
  <% end %>
  </div>
</div>
