<div class="jumbotron">
  <div class="col-lg-12">
            <div class="page-header">
              <h1 id="tables">Artists</h1>
              Order by: <a href="ordered_by_albums">Albums</a> |
              <a href="ordered_by_songs">Songs</a> |
              <a href="ordered_by_lyrics">Lyrics</a>
            </div>

            <div class="bs-component">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Total Albums</th>
                    <th scope="col">Total Songs</th>
                    <th scope="col">Total Lyrics</th>
                  </tr>
                </thead>
                <tbody>
                <% @artists.each do |artist| %>
                  <tr class="table-active">
                    <th scope="row"><%= artist.name %></th>
                    <td><%= artist.total_albums %></td>
                    <td><%= artist.total_songs %></td>
                    <td><%= artist.total_lyrics %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
              <div class="container">
              <div class="row">
              <div class="card bg-light mb-3 col-md-4">
                <div class="card-body">
                  <h4 class="card-title">Most frequent notemaker</h4>
                  <p class="card-text"><%= @most_frequent_notemaker %> (<%= @note_count %> notes)</p>
                </div>
              </div>

              <div class="card bg-light mb-3 col-md-4">
                <div class="card-body">
                  <h4 class="card-title">Longest song</h4>
                  <p class="card-text"><%= link_to @longest_song.name, song_path(@longest_song) %> (<%= @line_count %> lines)</p>
                </div>
              </div>

              <div class="card bg-light mb-3 col-md-4">
                <div class="card-body">
                  <h4 class="card-title">Largest album</h4>
                  <p class="card-text"><%= link_to @largest_album.name, album_path(@largest_album) %> (<%= @song_count %> songs)</p>
                </div>
              </div>
            </div>
            </div>
            </div>
          </div>
        </div>
